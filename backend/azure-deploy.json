{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "defaultValue": "drivepixel-api",
      "metadata": {
        "description": "Name of the Azure Web App"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources"
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "B1",
      "allowedValues": ["F1", "B1", "B2", "B3", "S1", "S2", "S3", "P1v2", "P2v2", "P3v2"],
      "metadata": {
        "description": "App Service Plan pricing tier"
      }
    },
    "nodeVersion": {
      "type": "string",
      "defaultValue": "18-lts",
      "metadata": {
        "description": "Node.js version"
      }
    },
    "databaseUrl": {
      "type": "securestring",
      "metadata": {
        "description": "PostgreSQL connection string"
      }
    },
    "jwtSecret": {
      "type": "securestring",
      "metadata": {
        "description": "JWT secret key"
      }
    },
    "smtpHost": {
      "type": "string",
      "defaultValue": "smtp.office365.com",
      "metadata": {
        "description": "SMTP host for email"
      }
    },
    "smtpPort": {
      "type": "string",
      "defaultValue": "587",
      "metadata": {
        "description": "SMTP port"
      }
    },
    "smtpUser": {
      "type": "string",
      "metadata": {
        "description": "SMTP username"
      }
    },
    "smtpPass": {
      "type": "securestring",
      "metadata": {
        "description": "SMTP password"
      }
    },
    "smtpFrom": {
      "type": "string",
      "metadata": {
        "description": "SMTP from address"
      }
    }
  },
  "variables": {
    "appServicePlanName": "[concat(parameters('appName'), '-plan')]",
    "webAppName": "[parameters('appName')]"
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2021-02-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "[parameters('sku')]"
      },
      "kind": "linux",
      "properties": {
        "reserved": true
      }
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2021-02-01",
      "name": "[variables('webAppName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]"
      ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "[concat('NODE|', parameters('nodeVersion'))]",
          "appSettings": [
            {
              "name": "DATABASE_URL",
              "value": "[parameters('databaseUrl')]"
            },
            {
              "name": "JWT_SECRET",
              "value": "[parameters('jwtSecret')]"
            },
            {
              "name": "SMTP_HOST",
              "value": "[parameters('smtpHost')]"
            },
            {
              "name": "SMTP_PORT",
              "value": "[parameters('smtpPort')]"
            },
            {
              "name": "SMTP_SECURE",
              "value": "false"
            },
            {
              "name": "SMTP_USER",
              "value": "[parameters('smtpUser')]"
            },
            {
              "name": "SMTP_PASS",
              "value": "[parameters('smtpPass')]"
            },
            {
              "name": "SMTP_FROM",
              "value": "[parameters('smtpFrom')]"
            },
            {
              "name": "NODE_ENV",
              "value": "production"
            },
            {
              "name": "WEBSITE_NODE_DEFAULT_VERSION",
              "value": "~18"
            }
          ],
          "alwaysOn": "[not(equals(parameters('sku'), 'F1'))]",
          "ftpsState": "Disabled",
          "minTlsVersion": "1.2"
        },
        "httpsOnly": true
      }
    }
  ],
  "outputs": {
    "webAppUrl": {
      "type": "string",
      "value": "[concat('https://', variables('webAppName'), '.azurewebsites.net')]"
    }
  }
}
